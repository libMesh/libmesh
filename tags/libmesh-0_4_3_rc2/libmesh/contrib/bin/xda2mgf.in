# Perl script to convert libMesh XDA meshes to MGF-format
# Author: Bill Barth, 2004


use strict;
my $cnt=0;
my $nelem=0;
while(<>)
  {
    if ($cnt==0)
      {
        print "MGF  002:000\n";
      }
    elsif ($cnt==1)
      {
        print;
        my @sl = split /#/;
        $nelem = @sl[0];
      }
    elsif ($cnt < 6)
      {
        print;
      }
    elsif ($cnt < 9)
      {
      }
    elsif ($cnt < 11)
      {
        print;
      }
    elsif ($cnt < $nelem + 11)
      {
        print "0 0 ".$_;
      }
    else
      {
        print;
      }
    $cnt++;
  }
  
